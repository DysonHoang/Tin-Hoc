{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile for Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wl,--stack=1024000000"
            ]
        }
    ]
}